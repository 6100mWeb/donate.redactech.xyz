////////////////////////////////////////
/// $VENDOR
////////////////////////////////////////

// $Grid system
@import 'vendor/gs'


////////////////////////////////////////
/// $HELPERS
////////////////////////////////////////

// $Mixins
@import 'helpers/mixins'

// $Variables
@import 'helpers/variables'

// $Reset
@import 'helpers/reset'

// $Base
@import 'helpers/base'


////////////////////////////////////////
/// $BLOCKS
////////////////////////////////////////


.nav
	font-size 14px
	line-height 50px

	& a
		display inline-block
		padding 0 10px


.subscribe-form
	display inline-block
	width 100%
	max-width 400px
	vertical-align top

	& input[type=text]
		width 65%
		padding 0 10px
		border none
		font-size 16px
		vertical-align top

	& input[type=submit]
		width 30%
		border none
		font-size 16px
		font-weight bold
		margin-left -5px
		vertical-align top


.logo
	background url("../images/logo.png") 0 0 no-repeat
	background-size cover
	font-size 0
	overflow hidden
	text-indent 999px

	& span
		display block
		font-size 0
		text-indent 999px


.page-header
	width 100%
	min-height 115px
	padding 35px 0
	background-color $light-color

	&__logo
		float left
		width 212px
		height 45px
		color $dark-color

		@media screen and ( max-width: 960px )
			text-align center
			margin 0 auto
			float none

	&__nav
		float right
		text-align right

		@media screen and ( max-width: 960px )
			margin 0 auto
			text-align center
			float none

	&__nav-link
		color $dark-color
		text-transform uppercase
		transition all .3s

		&:hover
			text-decoration underline

		&_selected
			color #fff
			background-color #9b242d
			text-decoration none
			cursor default

			&:hover
				text-decoration none


.promo
	width 100%
	min-height 600px
	padding 225px 0 175px
	background #af6967 url("../images/bg/promo.jpg") 0 0 no-repeat fixed
	text-align center
	background-size cover

	@media screen and ( max-width: 960px )
		min-height 400px
		padding 100px 0

	&__title
		text-transform uppercase
		color $light-color
		text-shadow 1px 1px 3px rgba(0,0,0,.5)

	&__slogan
		margin-top 15px
		line-height 1.2
		color $light-color

	&__button
		display block
		width 270px
		height 56px
		margin 45px auto 0
		color #46a651
		font-size 26px
		font-weight bold
		line-height 56px
		box-shadow 0 0 0 6px rgba(0,0,0,.1)
		background linear-gradient(to bottom, #fff, #f0f0f0)
		border-radius 28px
		transition all .5s

		&:hover
			transform scale(1.1)


.services
	width 100%
	clearfix()

	&__title
		font-size 40px
		font-weight bold
		color $light-color
		text-shadow 1px 1px 3px rgba(0,0,0,.5)

		@media screen and ( max-width: 768px )
			font-size 25px

	&__text
		margin-top 10px
		font-size 16px
		line-height 22px
		color $light-color

		@media screen and ( max-width: 768px )
			font-size 14px
			line-height 20px

	&__goals
		width 64%
		height 320px
		background #f1efec url("../images/bg/info.jpg") right center no-repeat
		-webkit-background-size 36% 100%
		background-size 36% 100%
		float left
		text-align right
		padding 135px 0

		@media screen and ( max-width: 768px )
			height 220px
			background #f1efec
			padding 80px 0

	&__logo
		display inline-block
		width 280px
		height 60px
		margin-right 40%

		@media screen and ( max-width: 768px )
			width 210px
			height 44px
			margin-right 30px

	&__donate
		width 36%
		height 320px
		background #9b242d
		float right
		padding 135px 0 0 40px

		&:hover
			background darken(#9b242d, 10%)

		@media screen and ( max-width: 768px )
			height 220px
			background #9b242d
			padding 80px 0 0 30px

	&__news
		width 64%
		height 640px
		padding 65px 80px 0 0
		background #46a651 url("../images/bg/news.jpg") left bottom no-repeat
		-webkit-background-size 100% 50%
		background-size 100% 50%
		float left

		@media screen and ( max-width: 768px )
			height 220px
			padding 20px 30px 0 10px
			background #46a651

	&__subscribe
		max-width 540px
		float right
		text-align right

		& .subscribe-form
			margin 20px 0 15px 0

			@media screen and ( max-width: 768px )
				margin 10px 0 0

		& input[type=text]
			height 45px
			background-color #5ec069
			color #46a651

		& input[type=submit]
			height 45px
			background-color #348e3e
			color $light-color

			&:hover
				background-color darken(#348e3e, 10%)

	&__soc
		position relative
		width 36%
		height 640px
		background #fff url("../images/bg/like.jpg") center bottom no-repeat
		-webkit-background-size 100% 50%
		background-size cover
		float right

		@media screen and ( max-width: 768px )
			height 220px
			background #fff

	&__icon
		display block
		position absolute
		bottom 0
		width 72%
		max-width 320px
		height 320px
		padding-top 120px
		background #3b5997
		font-size 16px
		line-height 22px
		color $light-color
		text-align center

		@media screen and ( max-width: 768px )
			width 100%
			max-width  100%
			height 220px
			padding-top 30px

		&:hover
			background darken(#3b5997, 10%)

		&:before
			content ""
			display block
			width 35px
			height 74px
			background url("../images/fb-logo.png") 0 0 no-repeat
			margin 0 auto 30px


.events
	width 100%
	padding 90px 0 145px
	background-color $light-color
	text-align center

	@media screen and ( max-width: 768px )
		padding 40px 0 60px

	@media screen and ( max-width: 640px )
		padding 20px 0 30px

	&__title
		color $dark-color
		margin-bottom 65px

		@media screen and ( max-width: 768px )
			margin 0 0 35px


.event
	float left
	gs-column(1,3,4%)

	&:hover &__date span
		background-color $selection-color

	&:hover &__date span:after
		border-top-color $selection-color

	&__date
		font-size 30px
		color #9b242d

		& span
			display block
			position relative
			width 88px
			height 88px
			margin 0 auto 30px
			padding 29px 0
			background-color $dark-color
			font-size 36px
			color $light-color
			font-weight bold

			&:after
				display block
				position absolute
				content ""
				bottom -14px
				left 50%
				margin-left -15px
				border-top 15px solid $dark-color
				border-right 15px solid transparent
				border-left 15px solid transparent

	&__title
		font-size 18px
		margin 30px 0 15px

		@media screen and ( max-width: 768px )
			margin 15px 0 0

	&__text
		line-height 22px

		@media screen and ( max-width: 640px )
			display none

	&__button
		display inline-block
		width 85px
		height 35px
		margin 30px 0 0
		padding 10px 0 0
		border none
		font-size 14px
		text-transform uppercase
		background-color $dark-color
		color $light-color

		&:hover
			background-color $selection-color


.page-footer
	width 100%
	padding 60px 0 40px
	background-color $dark-color

	@media screen and ( max-width: 640px )
		padding 20px 0 20px

	&__nav
		margin 0 auto
		text-align center

	&__nav-link
		color #606060
		transition all .3s

		&:hover
			text-decoration underline


		&_selected
			color #fff
			text-decoration none


.widgets
	margin 55px 0 35px
	text-align center
	border-top 1px solid #939393
	border-bottom 1px solid #939393
	padding 45px 0
	clearfix()

	@media screen and ( max-width: 640px )
		padding 15px 0
		margin 20px 0


.widget
	float left

	&_social
		text-align left
		gs-column(2,7)

		@media screen and ( max-width: 640px )
			gs-column(2,5)
			padding 10px 0

		@media screen and (max-width:  480px)
			width 100%
			float none
			text-align center
			clear both

	&_feed
		text-align left
		gs-column(3,7)

		@media screen and ( max-width: 640px )
			gs-column(3,5)
			padding 10px 0

		@media screen and (max-width:  480px)
			width 100%
			float none
			text-align center
			clear both

		& input[type=text]
			height 40px
			background-color #494949
			color #606060

		& input[type=submit]
			height 40px
			background-color $selection-color
			color $light-color

			&:hover
				background-color darken($selection-color, 10%)

	&_contact
		text-align right
		gs-column(2,7)

		@media screen and ( max-width: 640px )
			width 100%
			float none
			padding 10px 0
			text-align center
			clear both

	&__icon
		display inline-block
		width 40px
		height 40px
		margin 0 10px 0 0
		background url("../images/soc-icon-sprite.png") no-repeat
		font-size 0
		overflow hidden
		white-space nowrap
		text-indent 999px
		transition all .3s

		&:hover
			opacity .6
			transform scale(1.1)

		&_fb
			background-position 0 0

		&_tw
			background-position -41px 0

		&_gplus
			background-position -82px 0

	&__title
		color #c6c6c6
		margin 0 0 15px 0

	&__text
		color #606060
		line-height 16px


.copyright
	text-align center
	font-size 15px
	line-height 22px
	color #606060
