// $Services section
$block = ".services"

{$block}
	width 100%
	clearfix()

	&__title
		font-size 40px
		font-weight bold
		color $light-color
		text-shadow 1px 1px 3px rgba(0,0,0,.5)

		@media screen and ( max-width: 768px )
			font-size 25px

	&__text
		margin-top 10px
		font-size 16px
		line-height 22px
		color $light-color

		@media screen and ( max-width: 768px )
			font-size 14px
			line-height 20px

	&__goals
		width 64%
		height 320px
		background #f1efec url("../images/bg/info.jpg") right center no-repeat
		-webkit-background-size 36% 100%
		background-size 36% 100%
		float left
		text-align right
		padding 135px 0

		@media screen and ( max-width: 768px )
			height 220px
			background #f1efec
			padding 80px 0

	&__logo
		display inline-block
		width 280px
		height 60px
		margin-right 40%

		@media screen and ( max-width: 768px )
			width 210px
			height 44px
			margin-right 30px

	&__donate
		width 36%
		height 320px
		background #9b242d
		float right
		padding 135px 0 0 40px

		&:hover
			background darken(#9b242d, 10%)

		@media screen and ( max-width: 768px )
			height 220px
			background #9b242d
			padding 80px 0 0 30px

	&__news
		width 64%
		height 640px
		padding 65px 80px 0 0
		background #46a651 url("../images/bg/news.jpg") left bottom no-repeat
		-webkit-background-size 100% 50%
		background-size 100% 50%
		float left

		@media screen and ( max-width: 768px )
			height 220px
			padding 20px 30px 0 10px
			background #46a651

	&__subscribe
		max-width 540px
		float right
		text-align right

		& .subscribe-form
			margin 20px 0 15px 0

			@media screen and ( max-width: 768px )
				margin 10px 0 0

		& input[type=text]
			height 45px
			background-color #5ec069
			color #46a651

		& input[type=submit]
			height 45px
			background-color #348e3e
			color $light-color

			&:hover
				background-color darken(#348e3e, 10%)

	&__soc
		position relative
		width 36%
		height 640px
		background #fff url("../images/bg/like.jpg") center bottom no-repeat
		-webkit-background-size 100% 50%
		background-size cover
		float right

		@media screen and ( max-width: 768px )
			height 220px
			background #fff

	&__icon
		display block
		position absolute
		bottom 0
		width 72%
		max-width 320px
		height 320px
		padding-top 120px
		background #3b5997
		font-size 16px
		line-height 22px
		color $light-color
		text-align center

		@media screen and ( max-width: 768px )
			width 100%
			max-width  100%
			height 220px
			padding-top 30px

		&:hover
			background darken(#3b5997, 10%)

		&:before
			content ""
			display block
			width 35px
			height 74px
			background url("../images/fb-logo.png") 0 0 no-repeat
			margin 0 auto 30px
