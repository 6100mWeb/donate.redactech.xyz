////////////////////////////////////////
// $Page header
////////////////////////////////////////

//////////////////////////////////////// Block variables
// Colors
$c-page-header_bg = $c-light
$c-page-header_logo_text = $c-dark
$c-page-header_nav-link_text = $c-dark
$c-page-header_nav-link_selected_text = #9b242d

//////////////////////////////////////// Block mixins and functions

//////////////////////////////////////// Block styles
$block = ".page-header"

{$block}
	width 100%
	min-height 115px
	padding 35px 0
	background-color $c-page-header_bg

	&__logo
		float left
		width 212px
		height 45px
		color $c-page-header_logo_text

		@media screen and ( max-width: 960px )
			text-align center
			margin 0 auto
			float none

	&__nav
		float right
		text-align right

		@media screen and ( max-width: 960px )
			margin 0 auto
			text-align center
			float none

	&__nav-link
		color $c-page-header_nav-link_text
		text-transform uppercase
		transition all .3s

		&:hover
			text-decoration underline

		&_selected
			color #fff
			background-color $c-page-header_nav-link_selected_text
			text-decoration none
			cursor default

			&:hover
				text-decoration none
